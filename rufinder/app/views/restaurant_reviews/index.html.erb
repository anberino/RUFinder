<h1> Reviews dos Bandejões feitas por você: </h1>
<table>

  <tr>
    <th> Restaurante </th>
    <th> Nota </th>
    <th> Comentário </th>
    <th> Ações      </th>
  </tr>

  <% @reviews.where(user_id: current_user.id).each do |r|%>
    <tr>
      <% x = Restaurant.find(r.restaurant_id) %>
      <td><%=x.name%></td>
      <td class="rating">
        <% starRating(r.rating) do |htmlstr| %>
          <%= htmlstr.html_safe %>
        <% end %>
      </td>
      <td><%=r.comment%></td>
      <td><%= link_to "Editar",{controller: 'restaurant_reviews',action: 'edit', id: r.id},
              class:'button1'%>
          <%= link_to "Remover",r,method: :delete, data: {confirm: "Tem certeza que deseja excluir sua avaliação?"},id:r.id,
              class:'button2'%>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "Voltar", root_path, class: 'backbtn' %>
