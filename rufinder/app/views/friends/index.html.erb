<h1> Amigos </h1>

<table>

	<% @friends.each do |f| %>
		<% if f.sender_id == current_user.id %>
			<% if f.status %>
				<tr> <%= (User.find_by(id: f.receiver_id)).name %> </tr>
			<% end %> 
		<% end %>
		<% if f.receiver_id == current_user.id %>
			<% if f.status %>
				<tr> <%= (User.find_by(id: f.sender_id)).name %> </tr>
			<% end %> 
		<% end %>
	<% end %>

</table>

<br>

<table>

	<tr>
		<th> Pedidos de Amizade </th>
	</tr>

	<tr> <td> <b>Enviados</b> </td> </tr>

	<% @friends.each do |f| %>
		<% if f.sender_id == current_user.id %>
			<% if !f.status %>
				<% u = (User.find_by(id: f.receiver_id)) %>
				<% if !u.nil? %>
					<tr> <td> <%= u.name %> </td> </tr>
				<% else %>
					<tr> <td> Você não tem pedidos de amizade enviados... </td> </tr>
				<% end %>
			<% end %> 
		<% end %>
	<% end %>

	<tr> <td> <b>Recebidos</b> </td> </tr>

	<% @friends.each do |f| %>
		<% if f.receiver_id == current_user.id %>
			<% if !f.status %>
				<tr> <td> <%= (User.find_by(id: f.sender_id)).name %> </td> </tr>
			<% end %> 
		<% end %>
	<% end %>

</table>

<p><%= link_to "Adicionar amigo", controller: 'friends', action: 'new' %></p>
	

