<h1> Comidas cadastradas: </h1>
<table>

  <tr>
    <th> Nome </th>
    <th> Categoria </th>
    <th> Restaurante </th>
    <th> Avaliar </th>
  </tr>

  <% @foods.each do |f|%>
    <tr>
      <td><%= link_to "#{f.name}", Food.find(f.id) %></td>
      <td><%=f.category%></td>
      <% x = Restaurant.find(f.restaurant_id) %>
      <td><%=x.name%></td>
      <td><%= link_to "Avaliar esta comida", controller: 'reviews', action: 'new', food_id: f.id %></td>
    </tr>
  <% end %>

</table>

<a href=main>Voltar</a>
