<h1> Sua avaliação: </h1>
<table>

  <tr>
    <th> Usuário </th>
    <th> Comida </th>
    <th> Restaurante </th>
    <th> Nota </th>
    <th> Comentário </th>
  </tr>

    <tr>
      <% u = User.find(@review.user_id) %>
      <td><%=u.name%></td>
      <% f = Food.find(@review.food_id) %>
      <td><%=f.name%></td>
      <% x = Restaurant.find(f.restaurant_id) %>
      <td><%=x.name%></td>
      <td class="rating">
	  	<% toStars @review.rating do |star,number,ismarked|%>
      		<%= radio_button_tag "rating#{@review.id}", "3", ismarked ,id: number  %>
    		<%= label_tag number, "", class: star, for: number %>
	  	<% end %>
	  </td>
      <td><%=@review.comment%></td>
    </tr>

</table>

<a href=main>Voltar</a>
