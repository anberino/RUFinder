<h1> Sua avaliação: </h1>
<table>

  <tr>
    <th> Usuário </th>
    <th> Comida </th>
    <th> Restaurante </th>
    <th> Nota </th>
    <th> Comentário </th>
  </tr>

    <tr>
      <% u = User.find(@review.user_id) %>
      <td><%=u.name%></td>
      <% f = Food.find(@review.food_id) %>
      <td><%=f.name%></td>
      <% x = Restaurant.find(f.restaurant_id) %>
      <td><%=x.name%></td>
      <td class="rating">
          <% rate = (@review.rating/2).to_i %>
      	  <% for i in 0...rate %>
            	<span class="fa fa-star checked"></span>
      	  <% end %>

          <% for i in 0...5-rate %>
            <span class="fa fa-star"></span>
          <% end %>
      </td>
      <td><%=@review.comment%></td>
    </tr>

</table>

<%= link_to "Voltar", root_url %>
